<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/cardview_dark_background">



    <ImageView
        android:id="@+id/comic_cover"
        android:layout_width="160dp"
        android:layout_height="235dp"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="5dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@color/black" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        app:layout_constraintBottom_toBottomOf="@id/comic_cover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/comic_cover"
        app:layout_constraintTop_toTopOf="@id/comic_cover">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/read_now_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:paddingVertical="20dp"
            android:text="@string/read_now"
            android:textAllCaps="true"
            app:cornerRadius="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mark_as_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="@color/cardview_dark_background"
            android:paddingVertical="15dp"
            android:text="@string/mark_as_a_read"
            android:textAlignment="textStart"
            android:textAllCaps="true"
            app:cornerRadius="0dp"
            app:icon="@drawable/baseline_check_circle_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/read_now_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_to_library"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="@color/cardview_dark_background"
            android:paddingVertical="15dp"
            android:text="@string/add_to_library"
            android:textAlignment="textStart"
            android:textAllCaps="true"
            app:cornerRadius="0dp"
            app:icon="@drawable/baseline_add_circle_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mark_as_read" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/read_offline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="@color/cardview_dark_background"
            android:paddingVertical="15dp"
            android:text="@string/read_offline"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            app:cornerRadius="0dp"
            app:icon="@drawable/baseline_download_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_to_library" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>